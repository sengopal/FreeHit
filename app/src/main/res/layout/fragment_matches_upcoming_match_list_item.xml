<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlcontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_border"
    android:padding="@dimen/_10sdp"
    android:tag="cards main container">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/match_name_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/_6sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            tools:text="Sri Lanka Vs India, 4th ODI" />


        <TextView
            android:id="@+id/series_name_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_name_upcoming"
            android:layout_centerHorizontal="true"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:textSize="@dimen/_10ssp"
            tools:text="India Tour of Sri Lanka, 2017" />

        <TextView
            android:id="@+id/stadium_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/series_name_upcoming"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_10ssp"
            tools:text="M Chinnaswamy ,Bangalore , India" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_18sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/team_logo_1_upcoming"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:src="@drawable/matches" />

                <TextView
                    android:id="@+id/sn_team_1_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_toEndOf="@+id/team_logo_1_upcoming"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15ssp"
                    tools:text="SN" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/team_logo_2_upcoming"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:src="@drawable/matches" />

                <TextView
                    android:id="@+id/sn_team_2_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_toStartOf="@+id/team_logo_2_upcoming"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15ssp"
                    tools:text="IND" />


            </RelativeLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/match_date_upcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/_8sdp"
            android:textSize="@dimen/_11ssp"
            tools:text="Sep 03 2017, Sun" />


    </LinearLayout>


</RelativeLayout>


