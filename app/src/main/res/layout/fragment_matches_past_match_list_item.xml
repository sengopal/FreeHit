<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlcontainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_border"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:tag="cards main container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/match_name_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/_6sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            tools:text="Sri Lanka Vs India, 4th ODI" />


        <TextView
            android:id="@+id/series_name_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_name_past"
            android:layout_centerHorizontal="true"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingStart="@dimen/_8sdp"
            android:textSize="@dimen/_10sdp"
            tools:text="India Tour of Sri Lanka, 2017" />

        <TextView
            android:id="@+id/stadium_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/series_name_past"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_9sdp"
            tools:text="M Chinnaswamy ,Bangalore , India" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">


                <ImageView
                    android:id="@+id/team_logo_1_past"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:src="@drawable/matches" />

                <TextView
                    android:id="@+id/sn_team_1_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:layout_toEndOf="@+id/team_logo_1_past"
                    android:textSize="20sp"
                    tools:text="SN" />

                <TextView
                    android:id="@+id/innings1_team1_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_toEndOf="@+id/team_logo_1_past"
                    android:textSize="@dimen/_12sdp"
                    tools:text="207 (42.4)" />

                <TextView
                    android:id="@+id/innings2_team1_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_below="@+id/innings1_team1_past"
                    android:layout_toEndOf="@+id/team_logo_1_past"
                    android:textSize="@dimen/_12sdp"
                    tools:text="207 (42.4)" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/team_logo_2_past"
                    android:layout_width="65dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:src="@drawable/matches" />

                <TextView
                    android:id="@+id/sn_team_2_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:layout_toStartOf="@+id/team_logo_2_past"
                    android:textSize="20sp"
                    tools:text="IND" />

                <TextView
                    android:id="@+id/innings1_team2_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_toStartOf="@+id/team_logo_2_past"
                    android:textSize="@dimen/_12sdp"
                    tools:text="375/5 (50.0)" />

                <TextView
                    android:id="@+id/innings2_team2_past"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:layout_below="@+id/innings1_team2_past"
                    android:layout_toStartOf="@+id/team_logo_2_past"
                    android:textSize="@dimen/_12sdp"
                    tools:text="375/5 (50.0)" />


            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/match_result_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"
            android:gravity="center_horizontal"
            tools:text="India beat Sri Lanka by 168 runs" />

        <TextView
            android:id="@+id/match_date_past"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_11sdp"
            tools:text="Sep 03 2017, Sun" />


    </LinearLayout>


</RelativeLayout>


