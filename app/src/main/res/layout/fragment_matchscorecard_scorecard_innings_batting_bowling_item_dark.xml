<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/night_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/Batting_Values"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/batting_heading"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/batsman_value"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_11sdp"
                tools:text="Danushka Gunathilaka" />

            <TextView
                android:id="@+id/player_out_type"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/batsman_value"
                android:layout_marginStart="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/match_card_text"
                tools:text="c and b Mohammad Hafeez" />

        </RelativeLayout>

        <TextView
            android:id="@+id/runs_value"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/balls_value"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/fours_value"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_3sdp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/sixes_value"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            tools:text="999" />

        <TextView
            android:id="@+id/StrikeRate_value"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_1sdp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp"
            tools:text="999.999" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/Batting_Values"
        android:layout_marginTop="@dimen/_1sdp"
        android:background="@color/divider" />

</RelativeLayout>