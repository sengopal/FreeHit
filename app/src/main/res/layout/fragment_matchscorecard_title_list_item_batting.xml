<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/_5sdp"
        card_view:cardElevation="@dimen/_2sdp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_11sdp"
                tools:text="cheteshwar pujara" />

            <TextView
                android:id="@+id/player_out_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Player_name"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_9sdp"
                tools:text="c Moises Henriques b chiteshwar pujara" />

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/Batting_Table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/player_out_type"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@drawable/cell_shape"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/Batting_Labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_shape">

                    <TextView
                        android:id="@+id/RunsLabel"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:text="Runs"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BallsLabel"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:text="Balls"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/StrikeRateLabel"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:text="SR"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/FourLabel"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:text="4s"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SixLabel"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:text="6s"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/DotLabel"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:text="Dots"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_6sdp"
                        android:textStyle="bold" />


                </TableRow>


                <TableRow
                    android:id="@+id/Batting_value_Labels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cell_shape">

                    <TextView
                        android:id="@+id/RunsValue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/_6sdp"
                        tools:text="999" />

                    <TextView
                        android:id="@+id/BallsValue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/_6sdp"
                        tools:text="999" />

                    <TextView
                        android:id="@+id/StrikeRateValue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/_6sdp"
                        tools:text="99999" />

                    <TextView
                        android:id="@+id/FourValue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/_6sdp"
                        tools:text="99" />

                    <TextView
                        android:id="@+id/SixValue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/_6sdp"
                        tools:text="--" />

                    <TextView
                        android:id="@+id/DotValue"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/cell_shape"
                        android:gravity="center"
                        android:padding="@dimen/_13sdp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="@dimen/_6sdp"
                        tools:text="--" />


                </TableRow>
            </TableLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

