<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/match_card_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/MineCustomTabText">

    </android.support.design.widget.TabLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/match_card_tabs">

        <include
            android:id="@+id/complete_match_list"
            layout="@layout/common_recycler_view_list" />

    </RelativeLayout>

    <include
        android:id="@id/progress"
        layout="@layout/common_progressbar" />

    <include
        android:id="@+id/empty"
        layout="@layout/common_emptyview" />
</RelativeLayout>