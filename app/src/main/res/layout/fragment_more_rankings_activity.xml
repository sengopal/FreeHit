<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_tabs_ranking"
        layout="@layout/common_toolbar_tabs" />

    <RelativeLayout
        android:layout_below="@id/toolbar_tabs_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/inningsNumBtnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/_14sdp"
            android:paddingLeft="@dimen/_14sdp"
            android:paddingRight="@dimen/_14sdp"
            android:paddingTop="@dimen/_14sdp">

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg_color"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:text="test"
                android:textAllCaps="true"

                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/odi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/test"
                android:background="@drawable/btn_bg_color"
                android:text="odi"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/t20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/odi"
                android:background="@drawable/btn_bg_color"
                android:text="t20"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_rankings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/inningsNumBtnLayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>
</RelativeLayout>
