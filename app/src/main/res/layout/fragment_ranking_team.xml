<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.debut.ellipsis.freehit.More.Rankings.TeamRankingFragment">


    <include
        android:id="@+id/team_format_select"
        layout="@layout/common_spinner" />

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/team_format_select"
        android:paddingTop="@dimen/_8sdp"
        android:background="@color/bg_screen1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rank"
            android:layout_width="@dimen/_33sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="RANK"
            android:textAlignment="viewStart"
            android:layout_weight="0.1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/team"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_55sdp"
            android:text="TEAM"
            android:layout_weight="2.0"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/ratings"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="RATINGS"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_layout">

        <include
            android:id="@+id/team_list"
            layout="@layout/common_recycler_view_list" />

    </RelativeLayout>

</RelativeLayout>