<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/match_info_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tw__composer_light_gray"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_span="2"
                        android:textSize="@dimen/_20sdp"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/PlayingX1"
                        android:textAllCaps="true" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/match_info_team1_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        tools:src="@drawable/star" />

                    <TextView
                        android:id="@+id/match_info_team1"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        tools:text="Sri Lanka" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/divider" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp">

                    <ImageView
                        android:id="@+id/match_info_team2_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        tools:src="@drawable/star" />

                    <TextView
                        android:id="@+id/match_info_team2"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        tools:text="India" />

                </TableRow>
            </TableLayout>

            <ScrollView
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dip"
                android:fillViewport="true"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="horizontal|vertical">

                <HorizontalScrollView
                    android:id="@+id/horizontalView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:scrollbars="horizontal|vertical">


                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/tw__composer_light_gray"
                        android:stretchColumns="*">

                        <TableRow>

                            <TextView
                                style="@style/TextAppearance.AppCompat.Headline"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_span="2"
                                android:padding="@dimen/activity_vertical_margin"
                                android:textSize="@dimen/_20sdp"
                                android:text="@string/info"
                                android:textAllCaps="true" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_match_name_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/match"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_match_name"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                tools:text="England Vs West Indies, 5th ODI"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_series_name_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/series"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_series_name"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="West Indies tour of England, 2017" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_series_toss_status_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/toss"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_toss_status"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="England won the toss and elected to field" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_date_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/date"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_date"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="29 Sep 2017 , Fri" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_time_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/lastTime"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_time"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="16 : 30 (IST)" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_stadium_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/venue"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_stadium"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="The Rose Bowl, Southampton" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_umpires_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/umpires"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_umpires"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_29sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="Simon Fry (AUS),Michael Gough (ENG) and Rod Tucker (AUS)" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_rederee_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/referee"
                                android:textSize="@dimen/_13sdp" />

                            <TextView
                                android:id="@+id/match_info_rederee"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="Javagal Srinath (IND)" />
                        </TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/divider" />

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingLeft="@dimen/_8sdp"
                            android:paddingRight="@dimen/_8sdp"
                            android:paddingTop="@dimen/_8sdp">

                            <TextView
                                android:id="@+id/match_info_weather_label"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_20sdp"
                                android:text="@string/weather"
                                android:textSize="@dimen/_13sdp" />


                            <TextView
                                android:id="@+id/match_info_weather"
                                android:layout_width="@dimen/_250sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_13sdp"
                                tools:text="CLEAR" />
                        </TableRow>

                    </TableLayout>

                </HorizontalScrollView>
            </ScrollView>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Base.Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

