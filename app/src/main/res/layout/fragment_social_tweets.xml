<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.debut.ellipsis.freehit.Social.Tweets.SocialTweets">

    <RelativeLayout
        android:id="@+id/twit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/soc_tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            app:tabGravity="fill">

        </android.support.design.widget.TabLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/soc_tabs">

            <include
                android:id="@+id/tweets_recycler_layout"
                layout="@layout/common_recycler_view_list" />
        </RelativeLayout>

        <include
            android:id="@+id/progress"
            layout="@layout/common_progressbar" />

    </RelativeLayout>


</FrameLayout>
