<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/night_background"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/no_internet_connection"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/no_internet_connection_vector"
        android:tint="@android:color/white"/>

    <TextView
        android:id="@+id/no_internet_connection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/no_internet_connection"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/no_internet_refresh_button"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/button_shape_dark"
        android:text="REFRESH"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>
